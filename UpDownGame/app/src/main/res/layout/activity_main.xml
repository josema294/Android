<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#388E3C"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageCartas"
        android:layout_width="325dp"
        android:layout_height="410dp"
        android:layout_marginTop="372dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/_200px_playing_cards_khx" />

    <TextView
        android:id="@+id/textA"
        android:layout_width="105dp"
        android:layout_height="176dp"
        android:fontFamily="@font/bungee"
        android:gravity="center_vertical|center_horizontal"
        android:text="A"

        android:textColor="#512DA8"
        android:textSize="96sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textrriba"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026" />

    <TextView
        android:id="@+id/textrriba"
        android:layout_width="177dp"
        android:layout_height="98dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/bungee"
        android:gravity="center_vertical|center_horizontal"
        android:text="rriba"
        android:textColor="#512DA8"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />

    <TextView
        android:id="@+id/textBajo"
        android:layout_width="198dp"
        android:layout_height="90dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="404dp"
        android:fontFamily="@font/bungee"

        android:gravity="center_vertical|center_horizontal"
        android:text="bajo"
        android:textColor="#512DA8"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textrriba"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonEmpezar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#DFDFDF"
        android:text="Empezar"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/imageCartas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBajo"
        app:layout_constraintVertical_bias="0.279" />

    <EditText
        android:id="@+id/textImput"
        android:layout_width="239dp"
        android:layout_height="56dp"
        android:hint="Introduce tu nombre"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/imageCartas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonEmpezar"
        app:layout_constraintVertical_bias="1.0" />




</androidx.constraintlayout.widget.ConstraintLayout>